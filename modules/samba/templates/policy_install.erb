dn: CN={<%= @id %>},CN=Policies,CN=System,<%= @base_dn %>
changetype: add
objectClass: top
objectClass: container
objectClass: groupPolicyContainer
displayName: <%= @name %>
flags: 0
versionNumber: <%= @version %>
gPCFunctionalityVersion: 2
gPCFileSysPath: \\<%= @domain %>\sysvol\<%= @domain %>\Policies\{<%= @id %>}
<% if ! @user_extensions.empty? -%>
gPCUserExtensionNames: <% @user_extensions.each_with_index do |extension, idx| %><% if idx%2 == 0 %>[{<%= extension %>}<% else %>{<%= extension %>}]<% end%><% end %>
<% end -%>
<% if ! @machine_extensions.empty? -%>
gPCMachineExtensionNames: <% @Machine_extensions.each_with_index do |extension, idx| %><% if idx%2 == 0 %>[{<%= extension %>}<% else %>{<%= extension %>}]<% end%><% end %>
<% end -%>

